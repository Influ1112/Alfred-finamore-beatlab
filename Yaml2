name: Deploy Backend to Render

on:
  push:
    branches:
      - main
  workflow_dispatch:

permissions:
  contents: read

jobs:
  trigger-render-deploy:
    runs-on: ubuntu-latest
    env:
      RENDER_API_KEY: ${{ secrets.RENDER_API_KEY }}
      RENDER_SERVICE_ID: ${{ secrets.RENDER_SERVICE_ID }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Trigger Render deploy via API
        run: |
          if [ -z "${RENDER_API_KEY}" ] || [ -z "${RENDER_SERVICE_ID}" ]; then
            echo "Missing RENDER_API_KEY or RENDER_SERVICE_ID secret; skipping deploy trigger"
            exit 1
          fi

          echo "Triggering Render deploy for service ${RENDER_SERVICE_ID}..."
          RESPONSE=$(curl -s -X POST "https://api.render.com/v1/services/${RENDER_SERVICE_ID}/deploys" \
            -H "Authorization: Bearer ${RENDER_API_KEY}" \
            -H "Content-Type: application/json" \
            -d '{}')
          echo "Render response: $RESPONSE"
          echo "$RESPONSE" > /tmp/render_response.json
          jq . /tmp/render_response.json || true
